<div class="container">
  <div class="row">
    <%# 部分テンプレート %>
    <%= render"users/list", user: @user, book: @book %>
    <div class="col-xs-9">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 10, 10, class: "pull-left profile-thumb", fallback: "no_image.jpg", size:"20x20"%>
            </td>
            <td>
              <%= link_to book_path(book) do %>
              <%= book.title %>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
            <% end %>
            <% end %>
          </tr>
        </tbody>
    </table>
    </div>

  </div>
</div>
