<div class="container">
  <div class="row">

    <%# 部分テンプレート %>

    <%= render"users/list", user: @user, book_new: @book_new %>

    <div class="col-xs-9 float-left">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= form_for(@user) do |f| %>
              <%= attachment_image_tag @user, :profile_image, :fill, 10, 10, class: "pull-left profile-thumb", fallback: "no_image.jpg"%>
              <% end %>
            </td>
            <% @books.each do |book| %>
            <td><%= @user.name %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% end %>
          </tr>
        </tbody>
    </table>
    </div>

  </div>
</div>
