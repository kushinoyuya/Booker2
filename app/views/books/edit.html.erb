<!-- Bookのエラーメッセージ -->
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <h2>errors</h2>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <h1>Editing Book</h1>
      <%= form_for(@book) do |f| %>

      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :body %>
      <%= f.submit("Update book",class: 'btn btn-primary') %>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
