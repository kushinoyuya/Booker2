<div class="container">
  <div class="row">
    <%# 部分テンプレート %>
    <%= render"users/list", user: @user, book: @book %>
    <div class="col-xs-9">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 10, 10, class: "pull-left profile-thumb", fallback: "no_image.jpg", size:"20x20"%>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "Show", user_path(user) %>
            </td>
          </tr>
          <% end %>
        </tbody>
    </table>
    </div>
  </div>
</div>
